<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="quantity"
        android:id="@+id/quantity"
        android:defaultValue="10"
        android:title="Number of questions"/>

    <ListPreference
        android:key="category"
        android:id="@+id/category"
        android:title="Category"
        android:entryValues="@array/dummy_values_array"
        android:entries="@array/dummy_names_array"/>

    <ListPreference
        android:key="difficulty"
        android:id="@+id/difficulty"
        android:title="Difficulty"
        android:entryValues="@array/dummy_values_array"
        android:entries="@array/dummy_names_array"/>

    <ListPreference
        android:key="type"
        android:id="@+id/type"
        android:title="Type of questions"
        android:entryValues="@array/dummy_values_array"
        android:entries="@array/dummy_names_array"/>

</PreferenceScreen>